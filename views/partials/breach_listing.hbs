<div class="account wrap-row">
  <div class="image-wrap">
    <img class="breach-image" alt="{{ Title }}" src="/img/logos/{{ ImgSrc }}.{{ LogoType }}" />
  </div>
  <div class="breach-info-wrap">
    <h4 class="medium">{{ Title }}</h4>
    <span class="breach-info"><span class="medium">{{fluentFormat req "breach-date"}}:</span>{{prettyDate req BreachDate }}</span>
    <span class="breach-info"><span class="medium">{{fluentFormat req "compromised-accounts"}}:</span>{{localeString PwnCount }}</span>
    {{#if DataClasses }}
      <span class="breach-info"><span class="medium">{{fluentFormat req "compromised-data"}}:</span>{{breachDataClasses req DataClasses }}</span>
    {{/if}}
  </div>
</div>
