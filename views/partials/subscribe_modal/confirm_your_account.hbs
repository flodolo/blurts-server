<div id="confirm-your-account" class="modal-content confirm-your-account">
  <h3 class="section-headline">{{fluentFormat req "signup-modal-verify-headline"}}</h3>
  <div class="confirm-your-account-icon">
    {{> sprite symID="confirm-sending"}}
  </div>
  <p>{{{fluentFormat req "signup-modal-verify-blurb"}}}<br>{{fluentFormat req "signup-modal-verify-expiration"}}</p>
  <button id="resend-data" class="resend-data internal-link">{{fluentFormat req "signup-modal-verify-resend"}}</button>
  <button data-analytics-label="After Sign Up" class="close-modal blue-button">{{fluentFormat req "signup-modal-close"}}</button>
</div>
