    <tr>
      <td valign="top" style="padding-top: 3px; padding-bottom: 10px; width: 70px;">
        <img src="{{ SERVER_URL }}/img/logos/{{ breachAlert.ImgSrc }}.png" alt="" width="50" style="width: 50px;" />
